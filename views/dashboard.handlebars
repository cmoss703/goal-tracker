<div class="row">
    <div class="container">
        <div class="col-md-12 col-md-offset-4">
            <h4>Welcome, {{firstName}} {{lastName}}!</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="container">
        <div class="col l6 s12">
            <h5>Set a new goal</h5>
            <form class="col l12 s12">
                <div class="input-field col s12">
                    <input id="newGoalName" type="text">
                    <label for="newGoalName">Goal Name</label>
                </div>
                <div class="input-field col s12">
                    <input id="newGoalNumber" type="number">
                    <label for="newGoalNumber">Goal Number</label>
                </div>
                <div class="input-field col s12">
                    <input id="newGoalDoBy" type="date">
                    <label for="newGoalDoBy">Goal Do By Date</label>
                </div>
                <button id="newGoalSubmitBtn" class="btn waves-effect waves-light green" type="submit" name="action">Add
                    goal
                    <i class="material-icons right">add</i>
                </button>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="col l6 s12">
            <h5>My Current Goals</h5>
            <div id="chartsDiv">
                {{#each goals}}
                {{> goal-block}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

