<div class="container white-text" id="welcome-div">
    <div class="row">
        <div class="col l8 s12">
            <h4>Welcome, {{firstName}}!</h4>
        </div>
        <div class="col l4 s12">
            <div id="current-date-and-time"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="container">
        <div class="col l4 s12" id="new-goaldiv">
            <h5 class="white-text">Set a new goal</h5>
            <div class="card col l12 s12" id="add-goal">
                <div class="card-content">
                    <form>
                        <div class="input-field col s12">
                            <input id="newGoalName" type="text">
                            <label for="newGoalName">Goal Name</label>
                        </div>
                        <row>
                            <div class="input-field col s12 m12 l3">
                                <input id="newGoalNumber" type="number">
                                <label for="newGoalNumber">How many?</label>
                            </div>
                            <div class="input-field col s12 m12 l9">
                                <input id="newGoalUnit" type="text">
                                <label for="newGoalUnit">Units of measure? (e.g. miles, lbs)</label>
                            </div>
                        </row>
                        <div class="input-field col s12">
                            <input id="newGoalDoBy" type="date">
                            <label for="newGoalDoBy">Goal Do By Date</label>
                        </div>
                        <button id="newGoalSubmitBtn" class="btn waves-effect waves-light purple darken-1" type="submit"
                            name="action">Add
                            goal
                            <i class="material-icons right">add</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col l6 s12" id="my-goalsdiv">
            <h5 class="white-text">My Current Goals</h5>
            <div id="chartsDiv">
                {{#each goals}}
                {{> goal-block}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div id="goalModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div id="milestones">
            <div id="goal-form">
                <form>
                    <div class="mb-3">
                        <label for="newMilestoneQuantity" class="form-label">Milestone Quantity</label>
                        <input type="text" class="form-control" id="newMilestoneQuantity">
                    </div>
                    <div>
                        <label for="newMilestoneDoneBy" class="form-label">Milestone Done By</label>
                        <input type="date" class="form-control" id="newMilestoneDoneBy">
                    </div>
                    <div id="submit-button-div">
                        <button id="milestoneSubmitBtn" type="submit"
                            class="btn waves-effect waves-light purple darken-1 btn-block">Submit New Milestone</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

